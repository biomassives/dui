<%= simple_form_for resource,
                      url: crud_box_url_for(resource),
                      html: { class: "#{resource.class.name.underscore}_form",
                      data: { remote: true, type: 'html' }} do |form| %>

  <%= render "#{resource.class.name.underscore.pluralize}/form_body",
                form: form, resource: resource %>
<% end %>